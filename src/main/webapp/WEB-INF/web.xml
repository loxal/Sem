<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <description>A Google App Engine / GWT Application</description>
    <display-name>loxal: Lox - Web Workspace Environment (W2E)</display-name>
    <welcome-file-list>
        <welcome-file>meta/index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AuthInfoSvcImpl</servlet-name>
        <servlet-class>loxal.lox.meta.server.AuthInfoSvcImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TaskSvcImpl</servlet-name>
        <servlet-class>loxal.lox.service.meta.server.TaskSvcImpl
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TaskSvcImpl</servlet-name>
        <url-pattern>/meta/Task</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthInfoSvcImpl</servlet-name>
        <url-pattern>/meta/AuthInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MailSvcImpl</servlet-name>
        <servlet-class>loxal.lox.service.contact.server.MailSvcImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MailSvcImpl</servlet-name>
        <url-pattern>/contact/Mail</url-pattern>
    </servlet-mapping>

