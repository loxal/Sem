<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <g:TabLayoutPanel barHeight="32" ui:field="tabPanel">
        <g:tab>
            <g:header>
                <ui:msg>Create</ui:msg>
            </g:header>
            <g:VerticalPanel ui:field="container">
                <g:FormPanel ui:field="cmdCreator" action="/cmd/create" method="post">
                    <g:VerticalPanel ui:field="formContainer">
                        <g:Label ui:field="content"/>
                        <g:Label>
                            <ui:msg>Name</ui:msg>
                        </g:Label>
                        <g:TextBox ui:field="name" name="name" text="t"/>
                        <g:Label>
                            <ui:msg>Shortcut</ui:msg>
                        </g:Label>
                        <g:TextBox ui:field="restCall" name="restCall" text="http://twitter.com"/>
                        <g:Label>
                            <ui:msg>Description</ui:msg>
                        </g:Label>
                        <g:TextArea ui:field="desc" name="desc" text="tweet"/>
                        <g:SubmitButton ui:field="create" title="[Access Key: C]">
                            <ui:attribute name="title" description="Access Key"/>
                            <ui:msg>Create</ui:msg>
                        </g:SubmitButton>
                    </g:VerticalPanel>
                </g:FormPanel>
            </g:VerticalPanel>
        </g:tab>
    </g:TabLayoutPanel>
</ui:UiBinder>