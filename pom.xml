<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>loxal</groupId>
    <artifactId>sem</artifactId>
    <version>1.0.0-RELEASE</version>
    <packaging>war</packaging>
    <name>Sem</name>
    <inceptionYear>2011</inceptionYear>
    <url>http://dev.loxal.net</url>
    <description>Project to demonstrate GAE and GWT development patterns and paradigms</description>

    <organization>
        <name>Loxal</name>
        <url>http://www.loxal.net</url>
    </organization>

    <developers>
        <developer>
            <name>Alexander Orlov</name>
            <email>alexander.orlov@loxal.net</email>
            <organization>Loxal</organization>
            <organizationUrl>http://www.loxal.net</organizationUrl>
            <roles>
                <role>Lead</role>
            </roles>
        </developer>
    </developers>

    <licenses>
        <license>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <name>Apache 2.0</name>
            <distribution>repo</distribution>
            <comments>Applies to the frontend code writen in GWT/Java</comments>
        </license>
        <license>
            <name>The BSD 2-Clause License</name>
            <url>http://www.opensource.org/licenses/bsd-license.php</url>
            <distribution>repo</distribution>
            <comments>Applies to the backend code written in Go</comments>
        </license>
    </licenses>

    <ciManagement>
        <system>Jenkins</system>
        <url>http://sky.loxal.net:8080</url>
    </ciManagement>

    <distributionManagement>
        <repository>
            <id>loxal</id>
            <name>releases</name>
            <url>file://${user.home}/.m2/repository</url>
        </repository>
        <snapshotRepository>
            <id>loxal</id>
            <name>snapshots</name>
            <url>file://${user.home}/.m2/repository</url>
        </snapshotRepository>
    </distributionManagement>

    <issueManagement>
        <system>Issues</system>
        <url>https://github.com/loxal/Sem/issues</url>
    </issueManagement>

    <scm>
        <connection>scm:git:git://github.com:loxal/Sem.git</connection>
        <developerConnection>scm:git:git@github.com:loxal/Sem.git</developerConnection>
        <url>https://loxal@github.com/loxal/Sem.git</url>
        <tag>RELEASE</tag>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <gwt.ver>2.4.0-rc1</gwt.ver>
        <gwt.validation.ver>1.0.0.GA</gwt.validation.ver>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>${gwt.ver}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.validation</groupId>
            <artifactId>validation-api</artifactId>
            <version>${gwt.validation.ver}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.validation</groupId>
            <artifactId>validation-api</artifactId>
            <version>${gwt.validation.ver}</version>
            <classifier>sources</classifier>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.name}</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <version>2.2.0</version>
                <configuration>
                    <logLevel>INFO</logLevel>
                    <noServer>true</noServer>
                    <runTarget>http://localhost:8080/client/commander/index.html</runTarget>
                    <modules>
                        <module>${project.groupId}.widget.commander.Commander</module>
                    </modules>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.google.gwt</groupId>
                        <artifactId>gwt-dev</artifactId>
                        <version>${gwt.ver}</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>